<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme for Light Mode -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Base application theme for Dark Mode -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>

    <!-- Text Size Options -->
    <style name="AppTheme.SmallText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.MediumText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.LargeText">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- High Contrast Mode -->
    <style name="AppTheme.HighContrast">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="AppTheme">AppTheme</style>

</resources>
